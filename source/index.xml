<?xml version="1.0" encoding="UTF-8"?>
<html xmlns:ivdnt="http://www.ivdnt.org/xslt/namespaces">
    <head>
        <title>Historische woordenboeken</title>

    </head>
    <body>
        <div class="gtb-header">
            <div class="gtb-header-container">
                <a class="gtb-header-logo-container" href="http://www.ivdnt.org/" target="_blank" title="Instituut voor de Nederlandse Taal">
                    <img class="gtb-header-logo-int" src="img/ivdNt-logo-3regels-gebrokenwit.svg" alt="Instituut voor de Nederlandse Taal"></img>
                </a>
                
                <div class="gtb-header-title-container">
                    <div class="gtb-header-title">Historische&#160;woordenboeken</div>
                    <div class="gtb-header-subtitle">Nederlands en Fries</div>
                </div>
                
                <div class="gtb-header-logo-container">
                    <img class="gtb-header-logo" src="img/gtb-logo-header.svg" alt="De Geïntegreerde Taalbank" ivdnt:versioninfo="git-versie-komt-hier"></img>
                </div>
            </div>
        </div>
        
        <ivdnt:tabs class="container">
            <ivdnt:tab helptext="help/contexthelp-basiszoeken.xml">
                <ivdnt:tabtitle>Basiszoeken</ivdnt:tabtitle>
                <ivdnt:include href="basiszoeken.xml"/>
            </ivdnt:tab>
            <ivdnt:tab helptext="help/contexthelp-uitgebreidzoeken.xml">
                <ivdnt:tabtitle>Uitgebreid zoeken</ivdnt:tabtitle>
                <ivdnt:include href="uitgebreidzoeken.xml"/>
            </ivdnt:tab>
            <ivdnt:tab helptext="help/contexthelp-zoekeninbronnenlijst.xml">
                <ivdnt:tabtitle>Zoeken in bronnenlijst</ivdnt:tabtitle>
                <ivdnt:include href="bronnenlijstzoeken.xml"/>
            </ivdnt:tab>
            <ivdnt:tab id="resultaat" helptext="help/contexthelp-resultaat.xml">
                <ivdnt:tabtitle>Resultaat</ivdnt:tabtitle>
                <ivdnt:include href="resultaat.xml"/>
            </ivdnt:tab>
            <ivdnt:tab>
                <ivdnt:tabtitle>Help &amp; Info</ivdnt:tabtitle>
                <ivdnt:include href="help-en-info.xml"/>
            </ivdnt:tab>
        </ivdnt:tabs>

        <footer class="container gtb-footer">© <script>document.write(new Date().getFullYear());</script> Instituut voor de Nederlandse Taal.
            Zie onze
            <a target="_blank" href="https://ivdnt.org/privacyverklaring/">privacyverklaring</a> &amp;
            <a target="_blank" href="https://ivdnt.org/gebruiksvoorwaarden/">gebruiksvoorwaarden</a>.
        </footer>

        <div class="auxiliaries">
            <!-- Verborgen hulpstukken -->
            <ivdnt:formulier class="gtb-resultaatknoppen" id="resultaatknoppen" xmlns:ivdnt="http://www.ivdnt.org/xslt/namespaces">
                <ivdnt:include href="helpmodal.xml"/>
                <ivdnt:include href="sorteermodal-normal.xml"/>
                <ivdnt:include href="sorteermodal-bronnen.xml"/>
                <ivdnt:include href="exporteermodal.xml"/>
                <button class="exporteerknop btn btn-default" name="doe-afdrukken">Afdrukken...</button>
                <!-- De resterende col-md-6 gaat naar de navigatieknoppen -->
            </ivdnt:formulier>
        </div>
    </body>
</html>
